#include <iostream>
#include <string>

class Character {
private:
	int strength;
	int agility;
	float HP;
	std::string name;
	std::string characterClass;
	bool isAlive;
public:
	Character(int s, int a, float h, std::string n, std::string cc, bool live) {
		strength = s;
		agility = a;
		HP = h;
		name = n;
		characterClass = cc;
		isAlive = live;
	};
	void printOut(){
		std::cout << strength, agility, 
	}
};

int main()
{
	Character Liam(5, 2, 50, "Liam", "Autist", true);

	std::cout << "Please input your characters first name : " << "\n";
	std::cin >> name;

	std::cout << "Please input your character class : " << "\n";
	std::cin >> characterClass;

	std::cout << "Please input your characters strength stat - between 1 and 10" << "\n";
	std::cin >> strength;

	std::cout << "Please input your characters agility - between 1 and 10" << "\n";
	std::cin >> agility;

	std::cout << "Please input your characters HP - between 1 and 100" << "\n";
	std::cin >> HP;

	if (agility < 1 || agility > 10 || strength < 1 || strength > 10) {
		std::cout << "Please try again, and input valid player stats";
	}

	if (HP = 0) {
		std::cout << "Lmao you're dead";
	}



}
